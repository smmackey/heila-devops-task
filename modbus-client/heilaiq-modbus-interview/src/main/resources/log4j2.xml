<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %c{1} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.heilaiq" level="all" additivity="false">
            <!-- <appender-ref ref="file-log" level="${sys:com.heilaiq.loglevel}"/> -->
            <appender-ref ref="console"/>
        </Logger>
        <Root level="all" additivity="false">
            <appender-ref ref="console"/>
        </Root>

    </Loggers>
</Configuration>
